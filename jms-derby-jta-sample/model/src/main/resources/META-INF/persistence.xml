<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
    <persistence-unit name="user0" transaction-type="RESOURCE_LOCAL">
        <provider>org.apache.openjpa.persistence.PersistenceProviderImpl</provider>
        <!--<jta-data-source>osgi:service/javax.sql.DataSource/(osgi.jndi.service.name=jdbc/xaDataSource/address)</jta-data-source>-->
        <non-jta-data-source>osgi:service/javax.sql.DataSource/(osgi.jndi.service.name=jdbc/dataSource/address)</non-jta-data-source>
        <class>be.anova.samples.servicemix.model.entity.Address</class>
        <class>be.anova.samples.servicemix.model.entity.ContactInfo</class>
        <class>be.anova.samples.servicemix.model.entity.Coordinates</class>
        <class>be.anova.samples.servicemix.model.entity.Phone</class>
        <class>be.anova.samples.servicemix.model.entity.User</class>
        <exclude-unlisted-classes>true</exclude-unlisted-classes>
    </persistence-unit>
</persistence>
